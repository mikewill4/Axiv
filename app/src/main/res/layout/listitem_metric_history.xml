<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/metric_history_listitem_metrictype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="0dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#4d4d4d"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/metric_history_listitem_eventoccurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="TextView"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/border">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/metric_history_listitem_itemdata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="TextView"
            android:textSize="12dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/metric_history_listitem_itemdata2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="12dp"

            android:text="TextView"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/metric_history_listitem_itemdata3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textSize="12dp"

            android:text="TextView"
            android:maxLines="1"
            android:ellipsize="end"/>






    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_metric"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:src="@drawable/baseline_clear_white_24dp" />

    </LinearLayout>

</LinearLayout>